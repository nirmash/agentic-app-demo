{
  "title": "Contact Entry Form",
  "formName": "contacts",
  "sections": [
    {
      "heading": "New Contact Information",
      "fields": [
        {
          "type": "table",
          "label": "Contacts",
          "name": "contacts_table",
          "columns": [
            {
              "header": "First Name",
              "type": "text",
              "name": "first_name",
              "required": true
            },
            {
              "header": "Last Name",
              "type": "text",
              "name": "last_name",
              "required": true
            },
            {
              "header": "Email",
              "type": "text",
              "name": "email",
              "required": true
            },
            {
              "header": "Handle",
              "type": "calculated",
              "name": "handle",
              "formula": "='@' + email.split('@')[0]"
            }
          ],
          "initialRows": 1
        },
        {
          "type": "button",
          "label": "Submit",
          "name": "submit_button",
          "events": [
            {
              "event": "click",
              "description": "Submit the form data",
              "handler": "document.getElementById('main-form').requestSubmit();"
            }
          ]
        }
      ]
    }
  ]
}